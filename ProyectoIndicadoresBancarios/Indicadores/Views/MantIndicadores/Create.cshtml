@model Indicadores.Models.Indicador

@{
    ViewBag.Title = "Crear";
}

<h2>Crear nuevo Indicador</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Indicador</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="CtaCatalogo">Cuenta</label>
            <div class="col-md-10">
                @Html.DropDownList("CtaCatalogo", String.Empty)
                @Html.ValidationMessageFor(model => model.CtaCatalogo)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="SiglasEst">Estado</label>
            <div class="col-md-10">
                @Html.DropDownList("SiglasEst", String.Empty)
                @Html.ValidationMessageFor(model => model.SiglasEst)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="SiglasPer">Periodicidad</label>
            <div class="col-md-10">
                @Html.DropDownList("SiglasPer", String.Empty)
                @Html.ValidationMessageFor(model => model.SiglasPer)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="SiglasUni">Unidad</label>
            <div class="col-md-10">
                @Html.DropDownList("SiglasUni", String.Empty)
                @Html.ValidationMessageFor(model => model.SiglasUni)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" /> |
                @Html.ActionLink("Regresar", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
