@model Indicadores.Models.Indicador

@{
    ViewBag.Title = "Editar";
}

<h2>Modificar Indicador</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Indicador</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdIndicador)

    <div class="form-group">
        <label class="control-label col-md-2" for="SiglasEst">Estado</label>
        <div class="col-md-10">
            @Html.DropDownList("SiglasEst", String.Empty)
            @Html.ValidationMessageFor(model => model.SiglasEst)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="SiglasPer">Periodicidad</label>
        <div class="col-md-10">
            @Html.DropDownList("SiglasPer", String.Empty)
            @Html.ValidationMessageFor(model => model.SiglasPer)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="SiglasUni">Unidad</label>
        <div class="col-md-10">
            @Html.DropDownList("SiglasUni", String.Empty)
            @Html.ValidationMessageFor(model => model.SiglasUni)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Modificar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
